#include "main.h"

/**
 * print_diagonal - draws a diagonal line on the terminal
 *
 * @n: input number of times '\' should be printed
 *
 * Return: a diagonal
 */
void print_diagonal(int n);
void print_diagonal(int n)
{
int b, a;

if (n <= 0)
{
_putchar('\n');
}
else
{
for (b = 1; b <= n; b++)
{
for (a = 1; a < b; a++)
{
_putchar(' ');
}
_putchar('\\');
_putchar('\n');
}
}
}
